<% include ./particles/header %>
        <div class="container">
            <div class="main">
                <form action="/patient/update/<%=patient._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                            <label for="name"> Patient Name</label>
                            <input type="text" class="form-control" name="patient[name]"  placeholder="Name" value="<%=patient.name%>" required>
                        </div>
                        <div class="form-group">
                                <label for="phone"> Phone Number</label>
                                <input type="number" class="form-control" name="patient[phone]"  value="<%=patient.phone%>" required>
                            </div>
                        <div class="form-group">
                                <label for="exampleFormControlTextarea1">Address</label>
                                <textarea class="form-control" name="patient[address]" rows="3" required><%=patient.address%>"</textarea>
                              </div>
                    <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" name="patient[email]" aria-describedby="emailHelp" value="<%=patient.email%>" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
            </div>
        </div>
<% include ./particles/footer %>